= form_for(@person) do |f|
  = render 'form_errors'

  = f.label :name
  = f.text_field :name, class: 'span6', placeholder: 'First Last'

  = f.label :email
  = f.email_field :email, class: 'span6', placeholder: 'you@example.org'

  = f.label :phone, 'Phone (optional)'
  = f.phone_field :phone, class: 'span6', placeholder: 'e.g. (805) 555-5678'

  - today = Date.today
  = f.label :expected_graduation_date
  = select_month today, {}, {class: 'span4'}
  = select_year today, {start_year: today.year, end_year: today.year + 2}, {class: 'span2'}

  = f.label :availability
  = f.collection_select :availability_id, Availability.all, :id, :description, {prompt: true}, {class: 'span6'}

  - if signed_in?
    = f.label :notes
    = f.text_field :notes, class: 'span6', placeholder: 'Notes on applicant'


  .clearfix

  = f.submit 'Submit', class: 'btn btn-inverse clearfix'
